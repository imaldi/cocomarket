<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.cocomaret" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Cocomaret</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="vijayandika458@gmail.com" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <preference name="android-minSdkVersion" value="22" />
        <preference name="android-targetSdkVersion" value="33" />
        <preference name="AndroidXEnabled" value="true" />
        <allow-intent href="market:*" />
        <!--icons -->
        <!-- <icon src="src/assets/img/resources/android/icon/ldpi-logo.png" density="ldpi" /> -->
        <icon src="src/assets/img/resources/android/icon/mdpi-logo.png" density="mdpi" />
        <icon src="src/assets/img/resources/android/icon/hdpi-logo.png" density="hdpi" />
        <icon src="src/assets/img/resources/android/icon/xhdpi-logo.png" density="xhdpi" />
        <icon src="src/assets/img/resources/android/icon/xxhdpi-logo.png" density="xxhdpi" />
        <icon src="src/assets/img/resources/android/icon/xxxhdpi-logo.png" density="xxxhdpi" />

        <!-- splash screen -->
        <!-- <splash src="src/assets/img/resources/android/splash-screen/drawable-ldpi.png" density="port-ldpi" /> -->
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="src/assets/img/resources/android/icon/mdpi-logo.png" density="port-mdpi" />
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="src/assets/img/resources/android/icon/hdpi-logo.png" density="port-hdpi" />
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="src/assets/img/resources/android/icon/xhdpi-logo.png" density="port-xhdpi" />
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="src/assets/img/resources/android/icon/xxhdpi-logo.png" density="port-xxhdpi" />
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="src/assets/img/resources/android/icon/xxxhdpi-logo.png" density="port-xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <preference name="orientation" value="portrait" />
    <!-- <preference name="SplashScreenDelay" value="2000"/> -->
    <!-- <preference name="SplashMaintainAspectRatio" value="true"/> -->
    <!-- <preference name="AutoHideSplashScreen" value="true" /> -->
    <!-- <preference name="ShowSplashScreenSpinner" value="true"/> -->
</widget>
